---
import { Image } from "astro:assets";
import Daniel from "../../public/landing/daniel-hero.jpeg";
import Camera from "../../public/icons/camera.png";
---

<section id="inicio">
    <div class="text">
        <Image class="icono" src={Camera} alt="Icono de lentes de cámara" />
        <h1 class="name">Daniel Patiño</h1>
        <p class="role">Fotógrafo Profesional</p>
        <p class="description">
            Capturando emociones y momentos inolvidables con un enfoque
            artístico y profesional, transformando cada imagen en una historia
            que perdura en el tiempo.
        </p>
        <a class="contact-button" href="#contacto">Contáctame</a>
    </div>
    <Image src={Daniel} alt="Fotógrafo Daniel Patiño con cámara y lentes" />
</section>

<style scoped>
    section {
        background-color: #000;
        width: 100%;
        height: auto;
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: space-between;
        padding: 140px 16px 0;
        position: relative;
        max-width: 1280px;
        margin: auto;
    }

    section::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 10%;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, black 80%);
    }

    .text {
        margin-bottom: 50px;
        width: 100%;
        display: flex;
        flex-direction: column;
        height: 340px;
    }

    .icono {
        filter: invert(1);
        width: 40px;
        height: auto;
        margin-bottom: 10px;
    }

    p.role {
        font-size: 18px;
        font-weight: 400;
        color: #fff;
        letter-spacing: 0.5vw;
        white-space: nowrap;
        text-transform: uppercase;
        background-color: #c14a4a;
        padding: 2px 4px;
        width: fit-content;
        margin-bottom: 16px;
    }

    p.description {
        text-wrap-style: pretty;
    }

    img {
        width: 100%;
        height: auto;
    }

    .contact-button {
        padding: 10px 20px;
        text-decoration: none;
        color: #fff;
        font-size: 16px;
        background-color: #c14a4a;
        margin-top: 30px;
        width: fit-content;
        font-weight: 600;
        box-shadow:
            -4px 4px 0px 0px #fff,
            -3px 3px 0px 0px #fff,
            -2px 2px 0px 0px #fff,
            -1px 1px 0px 0px #fff;
        margin-left: 4px;
        transition: all 0.1s ease-in-out;
    }

    .contact-button:hover {
        background-color: #982727;
    }

    .contact-button:active {
        margin-top: 34px;
        margin-left: 0;
        box-shadow: unset;
    }

    @media (width >= 410px) {
        p.role {
            letter-spacing: 1.45vw;
        }
    }

    @media (width >= 768px) {
        section {
            flex-direction: row;
        }

        .text {
            width: 50%;
            margin-bottom: 0;
            height: 360px;
        }

        .icono {
            width: 50px;
        }

        img {
            width: 40%;
            height: auto;
        }

        p.role {
            letter-spacing: 0.7vw;
        }
    }

    @media (width >= 1024px) {
        section {
            padding: 120px 32px 0;
        }

        p.role {
            letter-spacing: 10px;
        }

        h1 {
            font-size: 52px;
        }

        .text {
            width: 45%;
            height: 400px;
        }

        .icono {
            width: 60px;
        }

        .contact-button {
            padding: 14px 26px;
            font-size: 18px;
        }
    }

    @media (width >= 1280px) {
        h1 {
            font-size: 70px;
        }

        p.role {
            letter-spacing: 14px;
            font-size: 22px;
        }

        .text {
            width: 50%;
            height: 480px;
        }

        .icono {
            width: 70px;
        }

        .contact-button {
            padding: 16px 32px;
            font-size: 20px;
        }
    }
</style>
