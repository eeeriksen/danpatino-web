<header id="header">
    <a class="logo-desktop" href="/">Dan Pati√±o</a>
    <a class="logo-mobile" href="/">D.P.</a>
    <label for="menu">
        <div class="bars">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
    </label>
    <input type="checkbox" name="menu" id="menu" />
    <nav class="menu">
        <ul>
            <li><a href="#">Inicio</a></li>
            <li><a href="#portafolio">Portafolio</a></li>
            <li><a href="#servicios">Servicios</a></li>
            <li><a href="#bio">Bio</a></li>
            <li><a href="#contacto">Contacto</a></li>
        </ul>
    </nav>
</header>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const header = document.getElementById("header");
        if (!header) return;

        window.addEventListener("scroll", () => {
            if (window.scrollY > 1) {
                header.classList.add("effect");
            } else {
                header.classList.remove("effect");
            }
        });
    });
</script>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1440px;
        padding: 0 16px;
        margin: auto;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 10;
        height: 80px;
        transition: all 0.15s ease-in-out;
        background-color: #000;
        border-bottom: 0.5px solid #000;
    }

    header.effect {
        height: 60px;
        border-bottom: 0.5px solid #414141;
    }

    a.logo-mobile,
    a.logo-desktop {
        font-size: 24px;
        color: #fff;
        font-weight: 800;
        text-decoration: none;
        font-family: "Alfa Slab One", serif;
    }

    a.logo-desktop {
        display: none;
    }

    a.logo-mobile {
        display: block;
    }

    input {
        display: none;
    }

    .bars {
        display: flex;
        flex-direction: column;
        gap: 6px;
        cursor: pointer;
    }

    .bar {
        width: 24px;
        height: 2px;
        background: white;
        padding: 0;
        margin: 0;
    }

    input:checked + nav {
        top: 50%;
    }

    nav {
        height: 56px;
        display: flex;
        position: absolute;
        background-color: #000;
        top: -50%;
        left: 0;
        transform: translate(0, -50%);
        transition: all 0.15s ease;
    }

    ul {
        list-style: none;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    li {
        margin-left: 16px;
    }

    li:first-child {
        display: none;
    }

    a {
        color: #fff;
        text-decoration: none;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
        font-weight: 600;
        font-size: 14px;
    }

    a:hover {
        color: #e96862;
    }

    @media (width >= 420px) {
        li:first-child {
            display: block;
        }
    }

    @media (width >= 480px) {
        nav {
            display: flex;
            position: relative;
            top: unset;
            transform: unset;
        }

        label {
            display: none;
        }
    }
</style>
